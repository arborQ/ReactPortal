{
    "testMatch": ["**/__tests__/**/*.ts?(x)", "**/?(*.)(spec|test).ts?(x)", "*.(ts|tsx|js)"],
    "moduleFileExtensions": ["ts", "tsx", "js"],
    "transform": {
        "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleNameMapper" : {
        "bx-utils": "<rootDir>/src/utils/index.ts",
        "bx-ui" : "<rootDir>/src/ui/material/index.ts",
        "bx-store": "<rootDir>/src/store/index.ts"
    }
}
